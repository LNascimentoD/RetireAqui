<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="739dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="@color/gray_figma"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="138dp"
                android:layout_height="70dp"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="24dp"
                android:paddingTop="40dp"
                android:text="@string/home_welcome"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="24dp"
                android:text="@string/home_userName"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="539dp"
            android:background="@color/black_figma"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:fontFamily="@font/poppins"
                android:paddingLeft="24dp"
                android:paddingTop="44dp"
                android:text="@string/home_servicesTitle"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="@color/white"
                android:text="@string/home_buttonMaps"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/gray_figma"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="103dp"
                android:layout_height="65dp"
                android:fontFamily="@font/poppins"
                android:padding="24dp"
                android:text="@string/homebar_home"
                android:textColor="@color/yellow_figma" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="98dp"
                android:layout_height="65dp"
                android:fontFamily="@font/poppins"
                android:padding="24dp"
                android:paddingBottom="24dp"
                android:text="@string/homebar_shopList"
                android:textColor="@color/yellow_figma" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="105dp"
                android:layout_height="65dp"
                android:fontFamily="@font/poppins"
                android:padding="24dp"
                android:text="@string/homebar_chat"
                android:textColor="@color/yellow_figma" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="106dp"
                android:layout_height="65dp"
                android:padding="24dp"
                android:text="@string/homebar_perfil"
                android:textColor="@color/yellow_figma" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>